<%= form_with(model: game, local: true) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2 class="alert-heading"><%= pluralize(game.errors.count, "error") %> stopped this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-3">
    <div class="col">
      <div class="form-group">
        <%= form.label :game_name %>
        <%= form.text_field :game_name, class: 'form-control' %>
        <small id="captionHelp" class="form-text text-muted">The name of the game on Steam</small>
      </div>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col">
      <div class="form-group">
        <%= form.label :humble_bundle %>
        <%= form.date_select :humble_bundle, { prompt: true }, { class: 'custom-select'} %>
        <small id="captionHelp" class="form-text text-muted">The monthly Humble Choice bundle</small>
      </div>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col">
      <div class="form-group">
        <%= form.label :steam_appid %>
        <%= form.select :steam_appid, options_for_select(@steam_id_options) %>
        <small id="captionHelp" class="form-text text-muted">The unique ID for the game on Steam</small>
      </div>
    </div>
  </div>

  <div class="actions row">
    <div class="col">
      <%= form.submit 'Update Steam ID', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
